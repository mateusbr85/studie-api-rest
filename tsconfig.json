{
    "compilerOptions": {
      "target": "es2019",
      "moduleResolution": "node",
      "module": "commonjs",
      "lib": ["es2019"],
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      // "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "resolveJsonModule": true,
      "alwaysStrict": true,
      "removeComments": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["./src/*"],
        "@database/*": ["./database/*"],
        "@models/*": ["./database/models/*"],
        "@bootstrap/*": ["./bootstrap/*"],
        "@controllers/*": ["src/http/api/controllers/*"],
        "@api/*": ["src/http/api/*"]
      },
      "rootDirs": [
        "./src",
        "./bootstrap",
        "./database",
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "./src/**/*.ts",
      "./bootstrap/**/*.ts",
      "./database/**/*.ts"
    ],
    "exclude": [
      "./node_modules/*",
      "dist"
    ]
  }